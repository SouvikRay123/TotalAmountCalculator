<Window x:Class="Total_Amount_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Total_Amount_Calculator"
        mc:Ignorable="d"
        Title="Total Amount Calculator" Height="350" Width="525" MaxWidth="525" MaxHeight="350">
    <Grid>
        <Button x:Name="btnChoose" Content="Choose Excel File" HorizontalAlignment="Left" Margin="54,83,0,0" VerticalAlignment="Top" Width="117" Height="34" Click="btnChoose_Click"/>
        <TextBox x:Name="txtPattern" HorizontalAlignment="Left" Height="23" Margin="206,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="167"/>
        <Label x:Name="label" Content="Enter Pattern to Match" HorizontalAlignment="Left" Margin="206,63,0,0" VerticalAlignment="Top" Width="167"/>
        <ProgressBar x:Name="barPercent" HorizontalAlignment="Left" Height="34" Margin="54,145,0,0" VerticalAlignment="Top" Width="423"/>

    </Grid>
</Window>
